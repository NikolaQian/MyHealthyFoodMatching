<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/main_menu_bk"
    android:gravity="center">
	
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.example.myhealthfood.ui.FZSongFontButton android:id="@+id/food_macth_btn"
        android:layout_width="200dip"
        android:layout_height="77dip"
        android:background="@drawable/main_menu_btn_selector"
        android:text="@string/food_match"/>
        <com.example.myhealthfood.ui.FZSongFontButton android:id="@+id/food_nutrition_btn"
        android:layout_width="200dip"
        android:layout_height="77dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/main_menu_btn_selector"
        android:text="@string/food_nutrition"/>
        <com.example.myhealthfood.ui.FZSongFontButton android:id="@+id/about_btn"
        android:layout_width="200dip"
        android:layout_height="77dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/main_menu_btn_selector"
        android:text="@string/about"/>
    </LinearLayout>
    

</LinearLayout>
